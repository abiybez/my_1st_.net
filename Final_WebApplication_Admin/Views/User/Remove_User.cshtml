@model Final_WebApplication_Admin.Models.AppUser;
@{
    Layout = "_Layout";
}
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete User</title>
</head>
<body>
    <h2 style="color: red">Are you sure you want to delete this User</h2>
    <form asp-controller="User" asp-action="Remove_User" enctype="multipart/form-data" method="post" class="mt-3">
        <div class="form-group row">
            <h3>User Name</h3>
            <input asp-for="@Model.UserName" value="@Model.UserName" class="form-control mb-2" disabled="disabled" />
            <input type="hidden" asp-for="@Model.UserId" value="@Model.UserId" class="form-control mb-2" />
        </div>
        <div class="form-group">
            <input style="margin: 5px" asp-controller="User" type="submit" value="Delete" class="btn btn-danger" />
        </div>
    </form>
    <div>
        <a  asp-controller="User" asp-action="GetAllUsers">Back To List</a>
    </div>
</body>
</html>

