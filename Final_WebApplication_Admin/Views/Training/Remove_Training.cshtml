@model Final_WebApplication_Admin.Models.Training;
@{
    Layout = "_Layout";
}
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete Training</title>
</head>
<body>
    <h2 style="color: red">Are you sure you want to delete this Training</h2>
    <form asp-controller="Training" asp-action="Remove_Training" enctype="multipart/form-data" method="post" class="mt-3">
        <div class="form-group row">
            <h3>Training Name</h3>
            <input asp-for="@Model.tName" value="@Model.tName" class="form-control mb-2" disabled="disabled" />
            <input type="hidden" asp-for="@Model.tId" value="@Model.tId" class="form-control mb-2" />

        </div>
        <div class="form-group">
            <input asp-controller="Training" type="submit" value="Delete" class="btn btn-danger" />
        </div>
    </form>
    <div>
        <a asp-controller="Training" asp-action="GetAllTraining">Back To List</a>
    </div>
</body>
</html>

