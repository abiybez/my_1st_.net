@{
	Layout = "_Layout";
}

<h3>All trainings</h3>

<body>
    <table class="table table-condensed table-hover">
        <th><b>Category Name</b></th>
        <th><b>Category ID</b></th>
        @foreach (var c in (IEnumerable<TrainingCategory>)Model)
        {
            <tr>
                <form asp-controller="Training" asp-action="Remove_Categories" enctype="multipart/form-data" method="get" class="mt-3">
                    <div class="form-group row">
                    <td>
                        
                        <h3 class="card-title">@c.Category_Name</h3>
                    </td>
                    <td>
                    <p class="card-text">@c.CategoryID</p>
                    </td>
                    </div>
                    <td>
                        <div class="btn-group">
                        <a asp-controller="Training" asp-action="Remove_Categories" asp-route-id="@c.CategoryID" method="get" class="btn btn-sm btn-outline-secondary">Remove</a>
                        </div>
                    </td>
                    <td>
                        <div class="btn-group">
                            <a asp-controller="Training" asp-action="Update_Categories" asp-route-id="@c.CategoryID" method="get" class="btn btn-sm btn-outline-secondary">Edit</a>
                        </div>
                    </td>
                </form>
            </tr>
        }
    </table>
</body>

