@model Final_WebApplication_Admin.Models.Training;
@{
    Layout = "_Layout";
}

<h4>Training Entity Form</h4>
<hr />
<form asp-controller="Training" asp-action="Create" enctype="multipart/form-data" method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="tName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="tName" class="form-control mb-2" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="tDesc" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <textarea asp-for="tDesc" class="form-control mb-2"></textarea>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="trainingImage" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="trainingImage" class="form-control mb-2" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="gallery" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="gallery" class="form-control mb-2" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="tCategory" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="tCategory" class="form-control mb-2" />
        </div>
    </div>

    <div class="form-group">
        <input type="submit" value="Create " class="btn btn-primary bm-2" />
    </div>
</form>
<div>
    <a asp-asp-controller="Training" asp-action="GetAllTraining">Back To List</a>
</div>
