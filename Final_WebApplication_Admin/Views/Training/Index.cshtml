@using Final_WebApplication_Admin.Models;
@model List<Training>;
@{
    Layout = "_Layout";
}

<div class="container">
    <h5 class="display-6">Trainings</h5>
    <hr />
    <div class="row">
        @foreach (var b in @Model)
        {
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm" style="width: 18rem;">
                    <img src="@b.imagePath" width="50" height="150" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h3 class="card-title">@b.tName</h3>
                        <p class="card-text">@b.tDesc</p>
                        <div class="d-flex justify-content-between align-items-center">
                        </div>
                    </div>
                </div>
            </div>
        }

    </div>
</div>