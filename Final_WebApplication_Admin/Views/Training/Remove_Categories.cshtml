@model Final_WebApplication_Admin.Models.TrainingCategory;
@{
    Layout = "_Layout";
}
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete Category</title>
</head>
<body>
    <h2 style="color: red">Are you sure you want to delete this category</h2>
    <form asp-controller="Training" asp-action="Remove_Category" enctype="multipart/form-data" method="post" class="mt-3">
        <div class="form-group row">
            <h3>Category Name</h3>
            <input asp-for="@Model.Category_Name" value="@Model.Category_Name" class="form-control mb-2" disabled="disabled" />
            <input type="hidden" asp-for="@Model.CategoryID" value="@Model.CategoryID" class="form-control mb-2"/>

        </div>
        <div class="form-group">
            <input asp-controller="Training" type="submit" value="Delete" class="btn btn-danger" /> 
        </div>
    </form>
    <div>
        <a asp-controller="Training" asp-action="GetAllCategories">Back To List</a>
    </div>
</body>
</html>

