@model Final_WebApplication_Admin.Models.TrainingCategory;
@{
    Layout = "_Layout";
}
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit Category</title>
</head>
<body>
    <h2 style="color: blue;">Edit Training</h2>
    <form asp-controller="Training" asp-action="Update_Category" enctype="multipart/form-data" method="post" class="mt-3">
        <div class="form-group row">
            <h3>Category Name</h3>
            <input asp-for="@Model.Category_Name" value="@Model.Category_Name" class="form-control mb-2" />
            <input type="hidden" asp-for="@Model.CategoryID" value="@Model.CategoryID" class="form-control mb-2" />
        </div>
        <div class="form-group">
            <input asp-controller="Training" type="submit" value="Edit" class="btn btn-Primary" style="background-color:blue;color:white;" />
        </div>
    </form>
    <div>
        <a asp-controller="Training" asp-action="GetAllCategories">Back To List</a>
    </div>
</body>
</html>

