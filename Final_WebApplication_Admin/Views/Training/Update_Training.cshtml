@model Final_WebApplication_Admin.Models.Training;
@{
    Layout = "_Layout";
}
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit Training</title>
</head>
<body>
    <h2 style="color: blue;">Edit Training</h2>
    <form asp-controller="Training" asp-action="Update_Training" enctype="multipart/form-data" method="post" class="mt-3">
        <div class="form-group row">
            <h3>Training Name</h3>
            <input asp-for="@Model.tName" value="@Model.tName" class="form-control mb-2"/>
            <h3>Training Description</h3>
            <input asp-for="@Model.tDesc" value="@Model.tDesc" class="form-control mb-2"/>
            <input type="hidden" asp-for="@Model.tId" value="@Model.tId" class="form-control mb-2" />
            <input type="hidden" asp-for="@Model.imagePath" value="@Model.imagePath" class="form-control mb-2" />
            <input type="hidden" asp-for="@Model.tCategory" value="@Model.tCategory" class="form-control mb-2" />
        </div>
        <div class="form-group">
            <input asp-controller="Training" type="submit" value="Edit" class="btn btn-Primary" style="background-color:blue;color:white;" />
        </div>
    </form>
    <div>
        <a asp-controller="Training" asp-action="GetAllTraining">Back To List</a>
    </div>
</body>
</html>

