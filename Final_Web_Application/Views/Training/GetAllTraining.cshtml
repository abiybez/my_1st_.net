    Layout = "_Layout";
}
<section class="layout_padding" style="background:rgb(79,74,103);">

            <div class="heading_container" style="margin-top:0px;">
            <h2 style ="color:white">
                    All Trainings
                </h2>
            </div>
            <div class="row">
                @foreach (var b in @Model)
                {
                    <div class="col-lg-4 col-md-6 mx-auto">
                        <div class="box">
                            <div class="card mb-4 shadow-sm" style="width: 18rem;">
                                <img src="@b.imagePath" width="50" height="150" class="card-img-top" alt="...">
                                <div class="card-body">
                                    
                                    <h3 class="card-title" style="color: black">@b.tName</h3>
                                <p class="card-text" style="color: black">@b.tDesc</p>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div class="btn-group">
                                            <a asp-controller="" asp-action="GetBookById" asp-route-id="@b.tId" class="btn btn-sm btn-outline-secondary">View Detail</a>
                                        </div>
                                        @* <small class="text-muted">Item Unique Name</small> *@
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
